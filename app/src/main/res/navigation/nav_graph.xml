<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/featuredFragment">

    <fragment
        android:id="@+id/featuredFragment"
        android:name="com.example.muvies.screens.featured.FeaturedFragment"
        android:label="Featured"
        tools:layout="@layout/featured_fragment" />
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.muvies.screens.movies.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/movies_fragment" >
        <action
            android:id="@+id/action_moviesFragment_to_inTheatersFragment"
            app:destination="@id/inTheatersFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="com.example.muvies.screens.tvShows.TvShowsFragment"
        android:label="Tv Shows"
        tools:layout="@layout/tv_shows_fragment" />
    <fragment
        android:id="@+id/inTheatersFragment"
        android:name="com.example.muvies.screens.seeAll.InTheatersFragment"
        android:label="In Theaters"
        tools:layout="@layout/in_theaters_fragment" />
</navigation>